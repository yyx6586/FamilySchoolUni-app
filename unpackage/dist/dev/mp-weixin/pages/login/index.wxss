	font-size: 80rpx;
	margin-top: 50rpx;
	font-style: italic;
}
.first-view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack:start;
